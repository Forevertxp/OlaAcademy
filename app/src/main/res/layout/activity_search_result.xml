<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.michen.olaxueyuan.ui.search.SearchResultActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/common_grey"></ImageView>

    <com.snail.pulltorefresh.PullToRefreshListView xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/searchListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        ptr:ptrAnimationStyle="flip" />

</LinearLayout>
