<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    android:background="@drawable/round_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tips"
        style="@style/title_text_22dp_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="温馨提示" />

    <TextView
        android:id="@+id/content"
        style="@style/normal_text_14dp_style"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <View style="@style/line_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/no"
            style="@style/blue_text_14dp_style"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item_bg"
            android:gravity="center"
            android:text="@string/cancel_message" />

        <View style="@style/line_vertical" />

        <TextView
            android:id="@+id/yes"
            style="@style/blue_text_14dp_style"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/selector_white_item_bg"
            android:gravity="center"
            android:text="@string/confirm_message" />
    </LinearLayout>
</LinearLayout>
