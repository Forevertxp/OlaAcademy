<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_layout" />

    <View
        android:id="@+id/pop_line"
        style="@style/line_horizontal_blue" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/ic_head_question"
        android:visibility="visible" />

    <TextView
        android:id="@+id/question_name"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/title_hint_color"
        android:gravity="bottom"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:text="北京考试大全"
        android:textColor="@color/title_hint_text_color"
        android:textSize="14dp"
        android:visibility="visible" />

   <!-- <include
        android:id="@+id/indicator_view"
        layout="@layout/fragment_question_indicator" />-->

    <com.snail.pulltorefresh.PullToRefreshExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible" />

</LinearLayout>
