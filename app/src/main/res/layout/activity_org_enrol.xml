<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/org_enrol_bg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"
                android:src="@drawable/org_enrol_bg"
                android:visibility="visible" />

            <TextView
                style="@style/normal_text_15dp_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:text="马上填写您的报名需求" />

            <Spinner
                style="@style/margin_15_5_15_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_gray_rectangle" />

            <EditText
                style="@style/margin_15_5_15_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_gray_rectangle"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true" />

            <EditText
                style="@style/margin_15_5_15_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_gray_rectangle"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:paddingLeft="@dimen/dp_10"
                android:singleLine="true" />

            <Spinner
                style="@style/margin_15_5_15_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@drawable/shape_gray_rectangle" />

            <Button
                style="@style/margin_15_5_15_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/rectangle_blue_3dp_btn_bg"
                android:text="立即报名"
                android:textColor="@color/white" />
            <TextView
                android:layout_width="match_parent"
                android:text="点击报名后，机构/院校招生人员马上与您取得联系"
                android:textColor="@color/title_hint_text_color"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
