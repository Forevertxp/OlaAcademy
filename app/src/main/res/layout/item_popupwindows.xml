<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_transparent"
    android:paddingRight="@dimen/dp_13"
    android:paddingLeft="@dimen/dp_13"
    android:paddingBottom="@dimen/dp_10">

    <Button
        android:id="@+id/item_popupwindows_cancel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_popup_bg"
        android:text="取消"
        android:textColor="@color/light_title_blue"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/ll_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/item_popupwindows_cancel"
        android:background="@drawable/shape_popup_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/item_popupwindows_camera"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/bt_nobgd"
                android:text="拍照"
                android:textColor="@color/light_title_blue"
                android:textSize="18sp" />
        </LinearLayout>


        <!-- <ImageView
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="@color/BackGround" />-->

        <LinearLayout
            android:id="@+id/item_popupwindows_Photo_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="vertical">

            <View style="@style/line_horizontal" />

            <Button
                android:id="@+id/item_popupwindows_Photo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bt_nobgd"
                android:text="从手机相册选择"
                android:textColor="@color/light_title_blue"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
